[Unit]
Description=Thesis monitor HPC & Ressources
After=multi-user.target

[Service]
Type=simple
Restart=on-failure
User=root
ExecStart=/bin/bash -c 'cd /root/BA_Thesis_ds/monitors/monitor1 && python3 -m venv env && source env/bin/activate && pip install -r requirements.txt && python3 main.py'

[Install]
WantedBy=multi-user.target
